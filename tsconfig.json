{
  "compilerOptions": {
    "baseUrl": ".", // Ensures relative imports start from the project root
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": true, // Optional but recommended for stricter type checking
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "skipLibCheck": true // Optional to skip type checking of declaration files
    ,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.ts"
, "next.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
